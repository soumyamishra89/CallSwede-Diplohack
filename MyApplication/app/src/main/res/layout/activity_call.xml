<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="diplohack.callswede.PlaceCallActivity"
    >
    <!--android:background="#09b0cc"-->

    <include layout="@layout/header"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/callStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:backgroundTint="@color/endstart"
        android:clickable="true"
        android:src="@drawable/ic_call_white_24dp"
        android:layout_margin="16dp"
        />
    <diplohack.callswede.view.customviews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learner"
        android:id="@+id/caller_name"
        android:textColor="@color/appColor"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_centerHorizontal="true"
        />
    <diplohack.callswede.view.customviews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="initiate a call"
        android:layout_below="@+id/caller_name"
        android:textColor="@color/appColor"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:textSize="18dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
